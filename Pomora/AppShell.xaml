<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pomora.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Pomora.Pages"
    Title="Pomora">


    <TabBar>
        <Tab Title="Pomora">
            <ShellContent ContentTemplate="{DataTemplate views:PomodoroPage}" Route="PomodoroPage"/>
        </Tab>
        <Tab Title="Test">
            <ShellContent ContentTemplate="{DataTemplate views:TestPage}" Route="TestPage"/>
        </Tab>
        <Tab Title="Chronometer">
            <ShellContent ContentTemplate="{DataTemplate views:ChronometerPage}" Route="ChronometerPage"/>
        </Tab>
    </TabBar>



</Shell>

